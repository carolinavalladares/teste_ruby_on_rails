
<div class="nested-fields">
  <div class="field form_field_wrapper">
    <%= f.label :produto_id ,"Produto:",class: "label"  %>
    <%= f.collection_select(:produto_id, Produto.all, :id, :nome, {:include_blank => 'Selecione o produto'},{:class => 'input_text'}) %>
  </div>
  <div class="field form_field_wrapper">
    <%= f.label :quantidade,  "Quantidade:",class: "label" %>
    <%= f.number_field :quantidade, class: "input_text"  ,step: :any %>
  </div>
   <div class="field form_field_wrapper">
    <%= f.label :valor,"Valor:",class: "label" %>
    <%= f.number_field :valor,class: "input_text", step: :any %>
  </div>
  <%= f.hidden_field :_destroy %>
  <%# <%= link_to "Remove", '#', class: "remove_fields" %>
</div>