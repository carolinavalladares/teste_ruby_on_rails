
<h1 class="page_title">Pedido NÂº <%= pedido.id%></h1>
<div id="<%= dom_id pedido %>" class="card">


  <p class="field">
    <strong class="label">Notafiscal:</strong>
    <%= pedido.notafiscal %>
  </p>

  <p class="field">
    <strong class="label">Valorfrete:</strong>
   <%= "R" + number_to_currency( pedido.valorfrete) %> 
   </p> 

   <p class="field">
    <strong class="label">Desconto:</strong>
   <%= "R" + number_to_currency(pedido.desconto)%>
  </p> 

  <p class="field">
    <strong class="label">Valor Total:</strong>
   <%="R" + number_to_currency(pedido.valortotal) %>
  </p>

  <p class="field">
    <strong class="label">Transportadora:</strong>
   <%=pedido.transportadora.nome%>
  </p>

   <% if pedido.items.any? %>
    <div class="field">
       <strong class="label">Itens:</strong>
      <ul class="list">
        <% pedido.items.each do |item| %>
          <li><%= item.produto.nome %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p class="datahora">
   
    <%= pedido.datahora.strftime('%d/%m/%y %R')%>
  </p>

  

 

</div>
